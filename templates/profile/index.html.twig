{% extends 'base.html.twig' %}

{% block body %}

	<div class="container mt-3">
		<div class="row">
			<div class="col">
				<div class="card">
					<div class="card-body">
						<h5 class="card-title">{{ 'app.profile.title'|trans }}</h5>
						<p class="card-text">{{ 'app.profile.email'|trans({'%email%': app.user.email}) }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
